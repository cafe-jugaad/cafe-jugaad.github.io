
<div id="deal">

  <div class="container">	

    <h2><%= data.deal[1].head %></h2>  

    <div class="row"><%= data.deal[1].text %></div>
    
    <br/><br/>

    <div class="row daily-deal">
      <% for deal_part_id in data.deal[1].parts.keys %>
      <% if(deal_part_id > 1) %>
      <i class="fa-plus daily-deal-icons2"></i>
      <% end %>
      <i class="fa-coffee daily-deal-icons"> <span><%= data.deal[1].parts[deal_part_id] %></span></i>
      <% end %>
      <i class="fa-arrow-right daily-deal-icons2"></i>
      <i class="fa-gift daily-deal-icons"> <span><%= data.deal[1].result %></span></i>
    </div>
    
    <br/><br/><br/>
    
    <h2><%= data.deal[2].head %></h2>  

    <div class="row">
      <div class="col-lg-6 featured-product-image">
	<img src="<%= data.deal[2].image %>" alt="<%= data.deal[2].alt %>" />
      </div>
      <div class="col-lg-6">
	<div class="featured-product-text"><%= data.deal[2].text %></div>
	<div class="featured-product-button"><%= data.deal[2].link_text %></div>
      </div>
    </div>

  </div>

</div>
