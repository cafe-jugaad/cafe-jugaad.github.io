  <script type="text/javascript" src="javascripts/main.js"></script>
  
  <script src="https://maps.googleapis.com/maps/api/js?v=3.exp&amp;sensor=false"></script>  
  
  <script type="text/javascript">
    /*global $:false*/
    /*global jQuery:false*/
    /*global google:false*/
    /*jshint unused: vars */
    /*jshint unused: false */
    
    
    /* -- PRETTY PHOTO */
    $(document).ready(function(){
    $("a[data-rel^='prettyPhoto']").prettyPhoto();
    });
    
    
    /* -- PARALLAX EFFECT SETTINGS -- */
    $(document).ready(function() {
    "use strict";
    $('#nav').localScroll({
    target:'#content'
    });   
    
    //.parallax(xPosition, speedFactor, outerHeight) options:
    //xPosition - Horizontal position of the element
    //inertia - speed to move relative to vertical scroll. Example: 0.1 is one tenth the speed of scrolling, 2 is twice the speed of scrolling
    //outerHeight (true/false) - Whether or not jQuery should use it's outerHeight option to determine when a section is in the viewport
    $('#intro').parallax("50%", 0.5);
    $('#deal').parallax("50%", 0.2);
    $('#about').parallax("50%", 0.5);
    $('#menu').parallax("50%", 0.2);
    $('#facts').parallax("50%", 0.5);
    $('#events').parallax("50%", 0.2);
    $('#contact').parallax("50%", 0.5);
    });
    
    
    /* -- SCROLLING -- */
    $('#navbar').scrollspy();
    
    
    /* -- FLEXISEL -- */
    $("#flexisel").flexisel({
      visibleItems: 5,
      animationSpeed: 1000,
      autoPlay: true,
      autoPlaySpeed: 3000,            
      pauseOnHover: true,
      enableResponsiveBreakpoints: true,
      responsiveBreakpoints: { 
        portrait: { 
          changePoint:480,
          visibleItems: 1
        }, 
        landscape: { 
          changePoint:640,
          visibleItems: 2
        },
        tablet: { 
          changePoint:768,
          visibleItems: 3
        }
      }
    });	


    /* -- FUN FACTS TIMER -- */
    $('.timer').one('inview', function(event, isInView, visiblePartX, visiblePartY) {
    if (isInView) {
    // element is now visible in the viewport
    if (visiblePartY == 'top') {
    // top part of element is visible
    } else if (visiblePartY == 'bottom') {
    // bottom part of element is visible
    } else {
    // whole part of element is visible
    }
    } else {
    // element has gone out of viewport
    }
    
    jQuery(function ($) {
    // custom formatting example
    $('#design').data('countToOptions', {
    formatter: function (value, options) {
    return value.toFixed();
    }
    });
    
    // start all the timers
    $('.timer').each(count);
    
    function count(options) {
    var $this = $(this);
    options = $.extend({}, options || {}, $this.data('countToOptions') || {});
    $this.countTo(options);
    }
    });
    });
    
    
    /* -- ELEMENTS ANIMATION ON SCROLL -- */
    $(window).scroll(function () {
    "use strict";
    var topOfWindow = $(window).scrollTop();
    
    function _checkOffset(className) {
    return function () {
    var $this = $(this),
    imagePos = $this.offset().top;
    
    $this.toggleClass(className, (imagePos < topOfWindow + 900));
					     };
					     }

	$('.headline-left-content').each(_checkOffset('animated fadeIn'));
	$('.daily-deal').each(_checkOffset('animated tada'));
	$('.featured-product-image').each(_checkOffset('animated bounceInLeft'));
	$('.featured-product-text').each(_checkOffset('animated bounceInRight'));
	$('.featured-product-button').each(_checkOffset('animated bounceInRight'));
	$('.about-text').each(_checkOffset('animated fadeIn'));
	$('.nbs-flexisel-container').each(_checkOffset('animated fadeIn'));
	$('.about-icon').each(_checkOffset('animated bounce'));
	$('.about-events').each(_checkOffset('animated fadeIn'));
	$('.about-button').each(_checkOffset('animated fadeIn'));
	$('.menu-images').each(_checkOffset('animated bounceIn'));
	$('.menu-titles h1').each(_checkOffset('animated bounceIn'));
	$('.menu-items').each(_checkOffset('animated bounceIn'));	
	$('.cn_content').each(_checkOffset('animated bounceInRight'));	
	$('.cn_list').each(_checkOffset('animated bounceInLeft'));
	$('.contact-form').each(_checkOffset('animated fadeIn'));	
	$('.contact-img').each(_checkOffset('animated fadeIn'));
	$('.contact-details-title').each(_checkOffset('animated fadeIn'));
	$('.contact-details').each(_checkOffset('animated fadeIn'));
});


/* -- GOOGLE MAP -- */
window.onload = function () {
	var styles = [
	{
		featureType: 'water', // set the water color
		elementType: 'geometry.fill', // apply the color only to the fill
		stylers: [
			{ color: '#adc9b8' }
		]
	},{
		featureType: 'landscape.natural', // set the natural landscape
		elementType: 'all',
		stylers: [
			{ hue: '#F0A830' },
			{ lightness: -35 }
		]
	},{
		featureType: 'poi', // set the point of interest
		elementType: 'geometry',
		stylers: [
			{ hue: '#5E3921' },
			{ lightness: 30 }
		]
	},{
		featureType: 'road', // set the road
		elementType: 'geometry',
		stylers: [
			{ hue: '#5E3921' },
			{ lightness: 14 }
		]
	},{
		featureType: 'road.local', // set the local road
		elementType: 'all',
		stylers: [
			{ hue: '#D86030' },
			{ saturation: 100 },
			{ lightness: -12 }
		]
	}
];

var myLatlng = new google.maps.LatLng(46.7697715,23.5896877,17);

var options = {
	mapTypeControlOptions: {
		mapTypeIds: ['Styled']
	},
	center: myLatlng,
	zoom: 17,
	disableDefaultUI: false,	
	mapTypeId: 'Styled'
};
var div = document.getElementById('location');
var map = new google.maps.Map(div, options);
var styledMapType = new google.maps.StyledMapType(styles, { name: 'Styled' });
map.mapTypes.set('Styled', styledMapType);

  var marker = new google.maps.Marker({
      position: myLatlng,
      map: map,
      title: 'Yummie Cafe!'
  });
  
};  
</script>

